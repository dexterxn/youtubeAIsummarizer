{
  "manifest_version": 3,
  "name": "Youtube AI Summarizer",
  "version": "1.1",
  "author": "Dexter Zhang",
  "description": "Automatically summarizes the YouTube video you're currently watching",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://m.youtube.com/*",
    "https://groq-summarizer-730135335149.us-central1.run.app/*"
  ],
  "action": {
    "default_icon": "frontend/assets/logov2.png",
    "default_popup": "frontend/index.html",
    "default_title": "Youtube AI Summarizer"
  }
}
